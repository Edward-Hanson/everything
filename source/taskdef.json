{
  "family": "cloudbasedproject-1-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::343218213563:role/cloudbasedproject-1-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::343218213563:role/cloudbasedproject-1-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "cloudbasedproject-1-container",
      "image": "<IMAGE1_URI>",
      "portMappings": [
        {
          "containerPort": 2021,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cloudbasedproject-1",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "eu-west-1"
        },
        {
          "name": "DB_HOST",
          "value": "cloudbasedproject-1-rds.c9q4ke0wo4ew.eu-west-1.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_NAME",
          "value": "postgres"
        }
      ],
      "secrets": [
        {
          "name": "DB_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:343218213563:secret:cloudbasedproject-1-db-credentials-rsxcX1:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:343218213563:secret:cloudbasedproject-1-db-credentials-rsxcX1:password::"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:2021/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}